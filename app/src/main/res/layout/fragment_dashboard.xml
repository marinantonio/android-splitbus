<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.screens.timetable.timetableListFragment.FragmentDashboard">

    <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="22sp"
            android:text="Dashboard Fragment"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
            android:id="@+id/et_test"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Enter something inside"
            android:ems="10"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_constraintStart_toStartOf="@+id/tv_title"
            app:layout_constraintEnd_toEndOf="@+id/tv_title"/>

    <TextView
            android:id="@+id/tv_count_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="0"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/et_test"
            app:layout_constraintEnd_toEndOf="@+id/et_test"
            app:layout_constraintStart_toStartOf="@+id/et_test"
            tools:text="tv_count_value"/>

    <Button
            android:id="@+id/btn_increase_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Increase"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/et_test"
            app:layout_constraintEnd_toEndOf="@+id/et_test"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintTop_toBottomOf="@+id/tv_count_value"/>

    <Button
            android:id="@+id/btn_open_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open detail"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_increase_count"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/tv_non_live_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Non Live Count:"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_open_detail"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/tv_non_live_count_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/tv_non_live_count"
            app:layout_constraintStart_toEndOf="@+id/tv_non_live_count"
            tools:text="tv_non_live_count_value"/>


</androidx.constraintlayout.widget.ConstraintLayout>