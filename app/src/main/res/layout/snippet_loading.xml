<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/snippet_loading"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/pb_loading"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_loading_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_loading_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/preuzimanje"
        android:textColor="@color/colorLoadingTitle"
        android:textSize="24sp"
        android:textAlignment="center"
        app:fontFamily="@font/font_semi_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_loading_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text="@string/preuzimanje_opis"
        android:textColor="@color/colorLoadingDesc"
        android:textSize="16sp"
        android:textAlignment="center"
        app:fontFamily="@font/font_regular"
        app:layout_constraintEnd_toEndOf="@+id/tv_loading_title"
        app:layout_constraintStart_toStartOf="@+id/tv_loading_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_loading_title" />

</androidx.constraintlayout.widget.ConstraintLayout>