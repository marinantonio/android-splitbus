<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AboutActivity">

  <com.google.android.material.appbar.AppBarLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:theme="@style/AppTheme.AppBarOverlay">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:theme="@style/ToolbarTheme"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

  </com.google.android.material.appbar.AppBarLayout>

  <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <androidx.cardview.widget.CardView
          android:id="@+id/cv_app_container"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:cardElevation="2dp"
          android:layout_marginTop="12dp"
          android:layout_marginBottom="3dp"
          android:layout_marginEnd="12dp"
          android:layout_marginStart="12dp"
          app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <ImageView
              android:id="@+id/iv_logo"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="8dp"
              android:layout_marginLeft="8dp"
              android:layout_marginTop="24dp"
              android:layout_marginEnd="8dp"
              android:layout_marginRight="8dp"
              android:contentDescription="@string/opisloga"
              android:background="@drawable/rectangle_yellow_round_edges"
              app:srcCompat="@mipmap/ic_launcher"
              android:padding="2dp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent" />

          <TextView
              android:id="@+id/tv_app_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="8dp"
              android:layout_marginLeft="8dp"
              android:layout_marginTop="8dp"
              android:layout_marginEnd="8dp"
              android:layout_marginRight="8dp"
              android:text="@string/app_name"
              android:textAllCaps="true"
              android:textColor="@color/colorText"
              android:textSize="28sp"
              app:fontFamily="@font/font_semi_bold"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/iv_logo" />

          <TextView
              android:id="@+id/tv_app_version"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginStart="8dp"
              android:layout_marginLeft="8dp"
              android:layout_marginEnd="8dp"
              android:layout_marginRight="8dp"
              android:textAlignment="center"
              android:textSize="17sp"
              app:fontFamily="@font/font_regular"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/tv_app_name" />

          <TextView
              android:id="@+id/tv_app_desc"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginStart="16dp"
              android:layout_marginLeft="16dp"
              android:layout_marginTop="8dp"
              android:layout_marginEnd="16dp"
              android:layout_marginRight="16dp"
              android:gravity="center"
              android:text="@string/about_app_desc"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/tv_app_version" />

          <Button
              android:id="@+id/btn_changelog"
              style="@style/Widget.AppCompat.Button.Borderless"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="16dp"
              android:layout_marginLeft="16dp"
              android:layout_marginTop="16dp"
              android:text="@string/about_changelog_title"
              app:layout_constraintEnd_toStartOf="@+id/btn_github"
              app:layout_constraintHorizontal_bias="0.5"
              app:layout_constraintHorizontal_chainStyle="packed"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/tv_app_desc" />

          <Button
              android:id="@+id/btn_github"
              style="@style/Widget.AppCompat.Button.Borderless"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="8dp"
              android:layout_marginLeft="8dp"
              android:text="@string/about_github"
              app:layout_constraintEnd_toStartOf="@+id/btn_facebook"
              app:layout_constraintHorizontal_bias="0.5"
              app:layout_constraintStart_toEndOf="@+id/btn_changelog"
              app:layout_constraintTop_toTopOf="@+id/btn_changelog" />

          <Button
              android:id="@+id/btn_facebook"
              style="@style/Widget.AppCompat.Button.Borderless"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="8dp"
              android:layout_marginLeft="8dp"
              android:layout_marginEnd="16dp"
              android:layout_marginRight="16dp"
              android:text="@string/about_facebook"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="0.5"
              app:layout_constraintStart_toEndOf="@+id/btn_github"
              app:layout_constraintTop_toTopOf="@+id/btn_changelog" />

          <Button
              android:id="@+id/btn_faq"
              style="@style/Widget.AppCompat.Button.Borderless"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="16dp"
              android:layout_marginLeft="16dp"
              android:layout_marginTop="8dp"
              android:layout_marginBottom="16dp"
              android:text="@string/about_faq_title"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toStartOf="@+id/btn_licence"
              app:layout_constraintHorizontal_bias="0.5"
              app:layout_constraintHorizontal_chainStyle="packed"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/btn_github" />

          <Button
              android:id="@+id/btn_licence"
              style="@style/Widget.AppCompat.Button.Borderless"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="8dp"
              android:layout_marginLeft="8dp"
              android:layout_marginEnd="16dp"
              android:layout_marginRight="16dp"
              android:text="@string/about_licenses_title"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="0.5"
              app:layout_constraintStart_toEndOf="@+id/btn_faq"
              app:layout_constraintTop_toTopOf="@+id/btn_faq" />

        </androidx.constraintlayout.widget.ConstraintLayout>

      </androidx.cardview.widget.CardView>



      <androidx.cardview.widget.CardView
          android:id="@+id/cv_dev_container"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:cardElevation="2dp"
          android:layout_marginTop="12dp"
          android:layout_marginBottom="12dp"
          android:layout_marginEnd="12dp"
          android:layout_marginStart="12dp"
          app:layout_constraintTop_toBottomOf="@+id/cv_app_container"
          app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <TextView
              android:id="@+id/tv_dev_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="8dp"
              android:layout_marginLeft="8dp"
              android:layout_marginTop="24dp"
              android:layout_marginEnd="8dp"
              android:layout_marginRight="8dp"
              android:text="@string/about_dev_name"
              android:textAllCaps="true"
              android:textColor="@color/colorText"
              android:textSize="28sp"
              app:fontFamily="@font/font_semi_bold"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="0.502"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent" />

          <TextView
              android:id="@+id/tv_dev_desc"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="16dp"
              android:layout_marginLeft="16dp"
              android:layout_marginTop="8dp"
              android:layout_marginEnd="16dp"
              android:layout_marginRight="16dp"
              android:text="@string/about_dev_desc"
              android:gravity="center"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/tv_dev_name" />

          <Button
              android:id="@+id/btn_contact"
              style="@style/Widget.AppCompat.Button.Borderless"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="16dp"
              android:layout_marginLeft="16dp"
              android:layout_marginTop="16dp"
              android:layout_marginBottom="16dp"
              android:text="@string/contact"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toStartOf="@+id/btn_linkedin"
              app:layout_constraintHorizontal_bias="0.5"
              app:layout_constraintHorizontal_chainStyle="packed"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/tv_dev_desc" />

          <Button
              android:id="@+id/btn_linkedin"
              style="@style/Widget.AppCompat.Button.Borderless"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="8dp"
              android:layout_marginLeft="8dp"
              android:text="@string/about_linkedin"
              app:layout_constraintEnd_toStartOf="@+id/btn_website"
              app:layout_constraintHorizontal_bias="0.5"
              app:layout_constraintStart_toEndOf="@+id/btn_contact"
              app:layout_constraintTop_toTopOf="@+id/btn_contact" />

          <Button
              android:id="@+id/btn_website"
              style="@style/Widget.AppCompat.Button.Borderless"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="8dp"
              android:layout_marginLeft="8dp"
              android:layout_marginEnd="16dp"
              android:layout_marginRight="16dp"
              android:text="@string/about_website"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="0.5"
              app:layout_constraintStart_toEndOf="@+id/btn_linkedin"
              app:layout_constraintTop_toTopOf="@+id/btn_contact" />


        </androidx.constraintlayout.widget.ConstraintLayout>

      </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

  </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>